<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.muz">

    <application
        android:allowBackup="true"
        android:icon="@drawable/music_icon"
        android:label="@string/music_app"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity_fayrouz"
            android:configChanges="orientation|screenSize"
            android:label="@string/fayrouz">
        </activity>

        <activity android:name=".adele"
            android:configChanges="orientation|screenSize"
            android:label="@string/adele">
        </activity>

        <activity android:name=".relax"
            android:configChanges="orientation|screenSize"
            android:label="@string/relaxing">
        </activity>


    </application>

</manifest>